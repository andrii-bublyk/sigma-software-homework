
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Models.AcademyModels.HomeTaskAssessment

<h2>Edit homeTask assessment</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="HomeTaskId" value="@Model.HomeTaskId" />
    <input type="hidden" asp-for="StudentId" value="@Model.StudentId" />

    <div>
        <label asp-for="HomeTask.Title"></label>
        <label asp-for="@Model.HomeTask.Title"></label>
    </div>
    <div>
        <label asp-for="IsComplete"></label>
        <input asp-for="IsComplete" />
    </div>
    <div>
        <label asp-for="Date"></label>
        <input asp-for="Date" />
    </div>
    <div>
        <input type="submit" value="Save" />
    </div>
</form>
@Html.ActionLink("Back to assesments list", "StudentAssessments", new { studentId = Model.StudentId })