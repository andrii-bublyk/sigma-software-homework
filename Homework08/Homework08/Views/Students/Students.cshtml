
@{
    ViewData["Title"] = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Models.Models.Student>

<h2>Students</h2>
<a href="/Students/Create">Add new student</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GitHubLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                Operations
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>
                    @student.Name
                </td>
                <td>
                    @student.BirthDate
                </td>
                <td>
                    @student.PhoneNumber
                </td>
                <td>
                    @student.Email
                </td>
                <td>
                    @student.GitHubLink
                </td>
                <td>
                    @student.Notes
                </td>
                <td>
                    @Html.RouteLink("Assessment", new { controller = "HomeTaskAssessment", action = "StudentAssessments", studentId = student.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = student.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = student.Id })
                </td>
            </tr>
        }
    </tbody>
</table>