
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Models.Models.HomeTask

<h2>Create new hometask for @ViewData["courseName"] course</h2>
<form asp-action="Create">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Course.Id" value="@ViewData["courseId"]" />

    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Date"></label>
        <input asp-for="Date" />
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" />
    </div>
    <div>
        <label asp-for="Number"></label>
        <input asp-for="Number" />
    </div>
    <div>
        <input type="submit" value="Create" />
    </div>
</form>
@Html.ActionLink("Back to hometasks list", "CourseHometasks", new { id = ViewData["courseId"] })
